{
  "dashboard": {
    "id": null,
    "title": "LOGOS PXL Core - Production Metrics",
    "tags": ["logos", "pxl", "production"],
    "timezone": "UTC",
    "panels": [
      {
        "id": 1,
        "title": "Proof Request Latency",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(pxl_proof_duration_seconds_bucket[5m]))",
            "legendFormat": "p95",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, rate(pxl_proof_duration_seconds_bucket[5m]))",
            "legendFormat": "p50",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "unit": "seconds",
            "label": "Latency"
          }
        ]
      },
      {
        "id": 2,
        "title": "Proof Success Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(pxl_proof_total{result=\"success\"}[5m]) / rate(pxl_proof_total[5m]) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent"
          }
        }
      },
      {
        "id": 3,
        "title": "Queue Depth",
        "type": "graph",
        "targets": [
          {
            "expr": "pxl_queue_depth",
            "legendFormat": "Queue Depth",
            "refId": "A"
          }
        ]
      },
      {
        "id": 4,
        "title": "Overlay Adapter Errors",
        "type": "table",
        "targets": [
          {
            "expr": "increase(pxl_adapter_errors_total[5m])",
            "legendFormat": "{{overlay}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 5,
        "title": "Coq Verification Status",
        "type": "stat",
        "targets": [
          {
            "expr": "pxl_coqchk_status",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "options": {
                  "0": {
                    "text": "FAILED",
                    "color": "red"
                  },
                  "1": {
                    "text": "PASSED",
                    "color": "green"
                  }
                },
                "type": "value"
              }
            ]
          }
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}

# --- START OF FILE config/fractal_store_config.json ---

{
  "metadata": {
    "version": "2.0.0",
    "description": "Configuration for Trinity-grounded fractal knowledge storage system",
    "last_updated": "2025-01-28",
    "purpose": "Persistent storage for semantic glyphs and fractal knowledge representations"
  },

  "storage": {
    "primary_path": "data/knowledge_store.jsonl",
    "backup_path": "data/knowledge_store_backup.jsonl",
    "format": "jsonl",
    "encoding": "utf-8",
    "compression": false,
    "max_file_size_mb": 1000
  },

  "indexing": {
    "enable_spatial_indexing": true,
    "spatial_grid_size": 50.0,
    "enable_semantic_indexing": true,
    "enable_trinity_indexing": true,
    "index_update_interval": 3600
  },

  "fractal_parameters": {
    "default_escape_radius": 2.0,
    "default_max_iterations": 100,
    "trinity_convergence_threshold": 0.1,
    "semantic_similarity_threshold": 0.7,
    "fractal_dimension_precision": 0.001
  },

  "trinity_grounding": {
    "require_trinity_validation": true,
    "default_existence_weight": 0.33,
    "default_goodness_weight": 0.33,
    "default_truth_weight": 0.34,
    "trinity_balance_tolerance": 0.1
  },

  "performance": {
    "cache_size": 10000,
    "batch_write_size": 100,
    "auto_cleanup_enabled": true,
    "retention_days": 365,
    "max_memory_usage_mb": 500
  },

  "validation": {
    "require_schema_validation": true,
    "require_complex_number_validation": true,
    "require_trinity_coherence": true,
    "allow_partial_glyphs": false
  },

  "backup": {
    "auto_backup_enabled": true,
    "backup_interval_hours": 24,
    "max_backup_files": 7,
    "backup_compression": true
  },

  "integration": {
    "semantic_glyph_database": true,
    "logos_harmonizer": true,
    "cognitive_forger": true,
    "trinity_fractal_validator": true
  },

  "logging": {
    "log_level": "INFO",
    "log_storage_operations": true,
    "log_trinity_validations": true,
    "log_performance_metrics": true,
    "max_log_file_size_mb": 100
  }
}

# --- END OF FILE config/fractal_store_config.json ---